  "license": "MIT",
  "bugs": {
    "url": "https://github.com/psudocode/aurora.js/issues"
  },
  "homepage": "https://github.com/psudocode/aurora.js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  }
